<div width="100%">
	<%= form_for(@book,:html => {class: 'form-horizontal'}) do  |f| %>
		<div>
			<label>Name:</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			<%= f.text_field  :name,:value =>f.object.name, :required => true %>
		</div><br/>
		<div>
			<label>Author Name:</label>
			<%= f.text_field  :author,:value =>f.object.name, :required => true %>
		</div><br/>
		<div>
			<label>ISBN:</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			<%= f.text_field  :isbn,:value =>f.object.name, :required => true %>
		</div><br/>
		<div>
			<label>Category:</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			<%= f.text_field  :category,:value =>f.object.name, :required => true %>
		</div><br/>
		<div>
			<label>Price:</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			<%= f.text_field  :price,:value =>f.object.name, :required => true %>
		</div><br/>
		<div>
			<label>status:</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			<select id="book_status" name="book[status]">
                <option value="">Select Status</option>
                <option value="Publish">Publish</option>
                <option value="Unpublish">Unpublish</option>
            </select>
		</div><br/><br/>
		<div>
		<%= f.submit "Submit", class: 'btn btn-theme02'  %>
		</div>
                    
	<%end%>
</div>